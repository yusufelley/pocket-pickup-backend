{
  "compilerOptions": {
    "allowJs": true,
    "module": "es6",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist", // outputs .js code here
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": ["./server.ts", "custom.d.ts"] // specifies what .ts files to compile
}
